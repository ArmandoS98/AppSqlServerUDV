<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.navViews.EquipoDetalleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_equipo"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/logo2" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNombreEntrenado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_equipo"
                android:layout_margin="15dp">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/txtNumeroDPI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:hint="Nombre Equipo"
                    android:maxLength="50"
                    android:textAlignment="center"
                    android:textSize="20dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <include
                layout="@layout/boton_actualizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tilNombreEntrenado"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


    </LinearLayout>


</ScrollView>